{
  "extends": "./.wxt/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "src/*": [
        "./src/*"
      ],
      "entrypoints/*": [
        "./src/entrypoints/*"
      ]
    },
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "chrome",
      "vitest/globals"
    ]
  }
}
