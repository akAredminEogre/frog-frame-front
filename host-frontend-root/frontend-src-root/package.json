{
  "name": "favorite-keyword-link-frog",
  "description": "manifest.json description",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "test": "vitest",
    "test:e2e": "playwright test",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "postinstall": "echo 'Skipping wxt prepare during build process'",
    "playwright:install": "npx playwright install --with-deps",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "lint:unused": "eslint . --ext .ts,.tsx,.js,.jsx --fix --rule 'unused-imports/no-unused-imports: error'",
    "lint:unused-vars": "eslint . --ext .ts,.tsx,.js,.jsx --fix --rule '@typescript-eslint/no-unused-vars: error' --rule 'unused-imports/no-unused-vars: error'",
    "clean:unused": "npm run lint:unused && npm run lint:unused-vars",
    "clean:all": "npm run lint:fix && npm run clean:unused",
    "find:unused": "eslint . --ext .ts,.tsx,.js,.jsx | grep 'is defined but never used'",
    "report:unused": "echo 'Unused variables report:' && npm run find:unused || echo 'No unused variables found!'",
    "check:unused": "eslint . --ext .ts,.tsx,.js,.jsx --rule '@typescript-eslint/no-unused-vars: error'",
    "knip": "knip",
    "knip:production": "knip --production",
    "knip:report": "knip --reporter json > knip-report.json && echo 'Knip report saved to knip-report.json'",
    "tsr": "tsr --project tsconfig.tsr.json 'src/.*\\.(ts|tsx)$'",
    "tsr:check": "tsr --project tsconfig.tsr.json 'src/.*\\.(ts|tsx)$'",
    "tsr:write": "tsr --write --project tsconfig.tsr.json 'src/.*\\.(ts|tsx)$'",
    "depcheck": "depcheck",
    "depcheck:report": "depcheck --json > depcheck-report.json && echo 'Depcheck report saved to depcheck-report.json'",
    "analyze:unused": "npm run knip",
    "unused:all": "npm run knip && npm run tsr:check && npm run depcheck",
    "unused:fix": "npm run tsr && npm run lint:fix"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.54.1",
    "@types/chrome": "^0.0.326",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@wxt-dev/module-react": "^1.1.1",
    "depcheck": "^1.4.7",
    "eslint": "^9.33.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "happy-dom": "^18.0.1",
    "knip": "^5.62.0",
    "tsr": "^1.3.4",
    "typescript": "^5.6.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.2",
    "wxt": "^0.20.7"
  }
}
